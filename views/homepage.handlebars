{{> header}}
<main class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4"></h1>
    <div class="space-y-4">
        {{#each posts}}
        <div class="bg-gray-700 p-4 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-2"><a href="/post/{{id}}"
                    class="text-white hover:text-gray-300">{{title}}</a></h2>
            <p class="text-sm text-gray-400">Posted on {{createdAt}}</p>
            <p class="mt-2">{{content}}</p>
        </div>
        {{/each}}
    </div>
</main>

<script src="/js/scripts.js"></script>