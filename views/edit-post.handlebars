{{> header}}
<main class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4 text-center">Edit Post</h1>
    <form id="edit-post-form" data-post-id="{{id}}"
        class="bg-gray-700 p-6 rounded-lg shadow-lg max-w-md mx-auto space-y-4">
        <input type="text" name="title" value="{{title}}" required class="w-full p-4 rounded-lg bg-gray-800 text-white">
        <textarea name="content" required class="w-full p-4 rounded-lg bg-gray-800 text-white">{{content}}</textarea>
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg w-full">Update
            Post</button>
    </form>
</main>

<script src="/js/scripts.js"></script>