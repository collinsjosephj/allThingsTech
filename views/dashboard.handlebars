<main class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">Dashboard</h1>

    <!-- New Post Form -->
    <section class="bg-gray-800 p-6 rounded-lg shadow-lg mb-6">
        <h2 class="text-2xl font-bold text-white mb-4">Create New Post</h2>
        <form id="new-post-form" class="space-y-4">
            <div>
                <label for="title" class="block text-sm font-medium text-white">Title</label>
                <input type="text" name="title" id="title" required class="mt-1 p-2 w-full rounded-md bg-gray-900 text-white">
            </div>
            <div>
                <label for="content" class="block text-sm font-medium text-white">Content</label>
                <textarea name="content" id="content" required class="mt-1 p-2 w-full rounded-md bg-gray-900 text-white"></textarea>
            </div>
            <button type="submit" class="p-2 bg-blue-600 rounded-md text-white hover:bg-blue-700">Create</button>
        </form>
    </section>

    <!-- Existing Posts -->
    <div class="space-y-4">
        {{#each posts}}
        <div class="bg-gray-700 p-4 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-2"><a href="/post/{{id}}" class="text-white hover:text-gray-300">{{title}}</a></h2>
            <p class="text-sm text-gray-400">Posted on {{formatDates createdAt}}</p>
            <p class="mt-2">{{post_content}}</p>
            <a href="/dashboard/edit/{{id}}" class="text-blue-500 hover:text-blue-700">Edit</a>
        </div>
        {{/each}}
    </div>
</main>

<script src="/js/postThoughts.js"></script>
<script src="/js/comment.js"></script>
<script src="/js/logout.js"></script>
